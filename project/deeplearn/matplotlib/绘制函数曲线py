import numpy as np
from matplotlib import pyplot as plt

import matplotlib
# 使用中文字体，用来显示中文
matplotlib.rc("font",family='YouYuan')


# 生成数据
x=np.arange(0,6,0.1) # 以0.1为单位，生成0到6的数据

# 求sin函数
y=np.sin(x)
y2=np.cos(x)

# 绘制图形

plt.plot(x,y,label="sin")
plt.plot(x,y2,label="cos",linestyle="--")  # 用虚线绘制
plt.xlabel("X") #x轴标签
plt.ylabel("Y") #y轴标签
plt.title('求sin 和 cos 的值，在数轴上表示')  # 标题
plt.legend()
plt.show()